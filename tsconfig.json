{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "dist/types",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ES6", "DOM", "ES2016", "ES2017"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "sourceMap": true,
    "paths": {
      "@/components/*": ["components/*"],
      "@/scss/*": ["scss/*"]
    }
  },
  "exclude": ["node_modules", "dist", "src/stories", "src/**/*.stories.tsx"]
}
